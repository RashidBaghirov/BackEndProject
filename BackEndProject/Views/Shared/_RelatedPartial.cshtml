@model List<Product>

    @foreach (Product item in Model)
{

	<div class="prd prd--style2 prd-labels--max prd-labels-shadow ">
		<div class="prd-inside">
			<div class="prd-img-area">
				<a asp-controller="product" asp-action="detail" asp-route-id="@item.Id" class="js-color-toggle" class="prd-img image-hover-scale image-container">
					<img src="~/assets/images/skins/fashion/product-page/@item.ProductImages.FirstOrDefault(x=>x.IsMain==true)?.Path" alt="Midi Dress with Belt" class="js-prd-img lazyload fade-up">
					<div class="foxic-loader"></div>
					<div class="prd-big-squared-labels">
					</div>
				</a>
				<div class="prd-circle-labels">
					<a href="#" class="circle-label-compare circle-label-wishlist--add js-add-wishlist mt-0" title="Add To Wishlist"><i class="icon-heart-stroke"></i></a><a href="#" class="circle-label-compare circle-label-wishlist--off js-remove-wishlist mt-0" title="Remove From Wishlist"><i class="icon-heart-hover"></i></a>
					<a href="#" class="circle-label-qview js-prd-quickview prd-hide-mobile" data-src="~/assets/ajax/ajax-quickview.html"><i class="icon-eye"></i><span>QUICK VIEW</span></a>

					<div class="colorswatch-label colorswatch-label--variants js-prd-colorswatch">
						<i class="icon-palette"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span><span class="path7"></span><span class="path8"></span><span class="path9"></span><span class="path10"></span></i>
						<ul>
							@foreach (ProductSizeColor color in item.ProductSizeColors)
							{
								<li class="active">
									<a href="~/../assets/#" class="js-color-toggle" data-toggle="tooltip" data-placement="right" title="@color.Color.Name">
										<img src="~/assets/images/skins/fashion/product-page/@color.Color.ColorPath"  class="lazyload fade-up" alt="@color.Color.Name">
									</a>
								</li>
							}
						</ul>
					</div>

				</div>

				<ul class="list-options color-swatch">
					@foreach (ProductSizeColor color in item.ProductSizeColors)
					{
						<li class="active">
							<a  data-toggle="tooltip" data-placement="right" title="@color.Color.Name">
								<img src="~/assets/images/skins/fashion/product-page/@color.Color.ColorPath" class="lazyload fade-up" alt="@color.Color.Name">
							</a>
						</li>
					}

				</ul>

			</div>
			<div class="prd-info">
				<div class="prd-info-wrap">
					<div class="prd-info-top">
						<div class="prd-rating"><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i></div>
					</div>
					<div class="prd-rating justify-content-center"><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i></div>
					<div class="prd-tag"><a href="#">@item.Collections.Name</a></div>
					<h2 class="prd-title"><a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></h2>
				
					<div class="prd-action">
						<form action="#">
							<button class="btn js-prd-addtocart" asp-controller="product" asp-action="detail"  asp-route-id="@item.Id">Add To Cart</button>
						</form>
					</div>
				</div>
				<div class="prd-hovers">
					<div class="prd-circle-labels">
						<div><a asp-controller="order" asp-action="AddToWishList" asp-route-id="@item.Id" class="circle-label-compare circle-label-wishlist--add js-add-wishlist mt-0" title="Add To Wishlist"><i class="icon-heart-stroke"></i></a><a href="#" class="circle-label-compare circle-label-wishlist--off js-remove-wishlist mt-0" title="Remove From Wishlist"><i class="icon-heart-hover"></i></a></div>
					</div>
					<div class="prd-price">

						<div class="price-new">$ @item.Desc</div>
					</div>
					<div class="prd-action">
						<div class="prd-action-left">
							<form action="#">
								<a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">
									<button class="btn js-prd-addtocart">Add To Cart</button>
								</a>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}

